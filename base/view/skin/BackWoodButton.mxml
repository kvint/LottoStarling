<?xml version="1.0" encoding="utf-8"?>
<s:SparkButtonSkin xmlns:fx="http://ns.adobe.com/mxml/2009"
                   xmlns:s="library://ns.adobe.com/flex/spark"
                   minWidth="21" minHeight="21">

    <fx:Metadata><![CDATA[
        [HostComponent("spark.components.Button")]
        ]]></fx:Metadata>

    <fx:Script><![CDATA[
        import spark.components.supportClasses.ButtonBase;

        override public function set hostComponent(value:ButtonBase):void {
            super.hostComponent = value;
            hostComponent.buttonMode = true;
        }

        ]]></fx:Script>

    <s:states>
        <s:State name="up"/>
        <s:State name="over"/>
        <s:State name="down"/>
        <s:State name="disabled"/>
    </s:states>

    <s:BitmapImage source="@Embed('/assets/img/btn/back_wood.png')"
                   width="118" height="27"/>

    <s:Label id="labelDisplay"
             textAlign="center" color="0x643a0d" fontSize="16"
             left="10" right="10" y="4"/>

</s:SparkButtonSkin>
