<?xml version="1.0" encoding="utf-8"?>
<s:SparkButtonSkin xmlns:fx="http://ns.adobe.com/mxml/2009"
                   xmlns:s="library://ns.adobe.com/flex/spark"
                   minWidth="21" minHeight="21">

    <fx:Metadata><![CDATA[
        [HostComponent("spark.components.Button")]
        ]]></fx:Metadata>

    <fx:Script><![CDATA[
        import spark.components.supportClasses.ButtonBase;

        override public function set hostComponent(value:ButtonBase):void {
            super.hostComponent = value;
            hostComponent.buttonMode = true;
        }

        ]]></fx:Script>

    <s:states>
        <s:State name="up"/>
        <s:State name="over"/>
        <s:State name="down"/>
        <s:State name="disabled"/>
    </s:states>

    <s:BitmapImage source="@Embed('/assets/img/btn/bonus_btn_X.png')"
                   visible="true" visible.down="false"
                   width="69" height="72"/>

    <s:BitmapImage source="@Embed('/assets/img/btn/bonus_btn_X_p.png')"
                   visible="false" visible.down="true"
                   width="69" height="72"/>

    <s:BitmapImage source="@Embed('/assets/img/btn/bonus_btn_X_d.png')"
                   visible="false" visible.disabled="true"
                   width="69" height="72"/>

    <s:Label id="labelDisplay"
             textAlign="center" color="0xffffff" fontSize="16"
             x="30" y="46" width="25"/>

</s:SparkButtonSkin>
